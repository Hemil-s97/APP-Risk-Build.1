package TestModel;

import static org.junit.Assert.assertEquals;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import com.risk.models.SelectionOfArmies;

/**
 * ArmiesSelection Model Test class.
 *
 */
public class ArmiesSelectionTest {
	int twoPlayerArmies = 40;
	int threePlayerArmies = 35;
	int fourPlayerArmies = 30;
	int fivePlayerArmies = 25;

	SelectionOfArmies twoPlayers;
	SelectionOfArmies threePlayers;
	SelectionOfArmies fourPlayers;
	SelectionOfArmies fivePlayers;
	
	/**
	 * This method tests the number of initial armies that needs to be selected based on Players.
	 * 
	 */
	@Test public void TestSelectionOfArmies() {
		assertEquals(twoPlayerArmies,twoPlayers.getPlayerArmies());
		assertEquals(threePlayerArmies,threePlayers.getPlayerArmies());
		assertEquals(fourPlayerArmies,fourPlayers.getPlayerArmies());
		assertEquals(fivePlayerArmies,fivePlayers.getPlayerArmies());
	}
	/**
	 * This method is invoked at the start of all the test methods.
	 */
	@BeforeEach public void beforeTest() {
		this.twoPlayers = new SelectionOfArmies(2);
		this.threePlayers = new SelectionOfArmies(3);
		this.fourPlayers = new SelectionOfArmies(4);
		this.fivePlayers = new SelectionOfArmies(5);
	}
}
